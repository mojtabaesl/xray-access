{
  "root": "true",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "importHelpers": true,

    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "ESNext"],
    "skipLibCheck": true,
    "outDir": "bin",
    "rootDir": "./src",
    "removeComments": true,

    /*Checks */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "nodenext",
    // "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "types"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "types", "**/*.test.ts", "./jest.config.ts"]
}
